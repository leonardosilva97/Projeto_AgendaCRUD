<h1>Listagem de Pessoas</h1>

<div class="mt-5">
    <a class="btn btn-primary" href="/pessoa/create">Criar Pessoas</a>
</div>

<div class="mt-5">
    <table class="table table-stripped">
        <tr>
            <th>Ações</th>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Salário</th>
        </tr>
        {{# each pessoas}}
            <tr>
                <td>
                    <a href="/pessoa/edit/{{ this.id }}" class="btn btn-sm btn-warning">Editar</a>
                    <a href="/pessoa/destroy/{{ this.id}}" class="btn btn-sm btn-danger">Excluir</a>
                </td>
                <td>{{ this.id }}</td>
                <td>{{ this.nome }}</td>
                <td>{{ this.email }}</td>
                <td>{{ this.data_nascimento }}</td>
                <td>{{ this.salario }}</td>
            </tr>
        {{/ each}}
    </table>
</div>